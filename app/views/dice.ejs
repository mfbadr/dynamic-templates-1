<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dice Roller</title>
    <link rel="stylesheet" href="/css/dice.css">
  </head>
  <body>
  <h1>Rolling <%= rolls %> dice</h1>
    <% var sum = 0 %>
    <% for( var i = 0; i < rolls; i++) { %> 
      <% var thisRoll = Math.floor(Math.random() * 6) + 1 %>
        <% sum += thisRoll %>
        <% var filePath = "/images/diceSides/side" + thisRoll + ".jpeg" %>
        <img src="<%= filePath %>">
    <% } %>
    <h2> The sum is <%= sum %> </h2>
  </body>
</html>
